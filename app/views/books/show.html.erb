<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/new', book: @book, user: @user %>
    </div>

   <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
              <%= @book.user.name %><% end %></td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td><% if @user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
                <% end %></td>
            <td><% if @user.id == current_user.id %>
                  <%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
                <% end %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>