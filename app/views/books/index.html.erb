<div class="container">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <div>
        <%= attachment_image_tag @book.user, :profile_image %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th>test</th>
            </tr>
            <tr>
              <th>introduction</th>
              <th>test</th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col">
      <h2>Books</h2>
      <table class="table books_index">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.user.profile_image do %>
                    <%= attachment_image_tag book.user, :profile_image %>
                  <% end %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>